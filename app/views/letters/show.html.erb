<p id="notice"><%= notice %></p>

<div id="categories">
  <ul>
  <% for category in @letter.categories %>
    <li class="category"><%= category.display_name %></span>
  <% end %>
  </ul>
</div>


<% if @can_edit then %>
<%= link_to 'Edit', edit_letter_path(@letter) %> |
<% end  %>
<%= link_to 'All Letters', letters_path %>
<%= button_to 'Duplicate & Edit',  duplicate_letter_path(@letter) %>

<p>
  <form method="POST" action="<%= format_letter_path %>">
    <p>Find your Congresspeople and format the letter: </p>
    <label for="name">name</label>
    <input type="text" id="name" name="name">
    <label for="street">street</label>
    <input type="text" id="street" name="street">
    <label for="city">city</label>
    <input type="text" id="city" name="city">
    <label for="state">state</label>
    <input type="text" id="state" name="state">
    <label for="zip">zip</label>
    <input type="text" id="zip" name="zip">
    <input type="submit" value="Search">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</p>

<%= render 'formatted', letter: @letter, sender: @sender, recipient: @recipient %>
